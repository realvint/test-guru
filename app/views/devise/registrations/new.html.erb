<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <div class="card">
      <div class="card-header">
        <h2><%= t('.header') %></h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label t('.name') %><br />
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label t('.surname') %><br />
            <%= f.text_field :surname, class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label t('.email') %><br />
            <%= f.email_field :email, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label t('.password') %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> <%= t('.password_length') %>)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label t('.password_conf') %>
            <%= octicon "alert", class: 'text-danger hide'%>
            <%= octicon "check", class: 'text-success hide'%><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>

          </div>

          <div class="actions">
            <%= f.submit t('.sign_up'), class: 'btn btn-outline-primary' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
