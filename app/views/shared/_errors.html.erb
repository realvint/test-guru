<% if resource.present? && resource.errors.any? %>
  <%= content_tag :div, class: 'resource_errors alert alert-danger', role: "alert", data: { resource_id: resource.id } do %>
    <div class="ps-2">
      <h3><%= t('.header', count: resource.errors.count) %>:</h3>
      <ul>
        <% resource.errors.full_messages.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

