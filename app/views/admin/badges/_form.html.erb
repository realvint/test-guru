<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :img_link %>
    <%= form.text_field :image, class: 'form-control' %>
  </p>

  <p>
    <%= form.label :rule_type %>
    <%= form.select :rule_type, badge_attribute_rules, {prompt: true}, class: 'form-select' %>
  </p>

  <p>
    <%= form.label :rule_option %>
    <%= form.text_field :rule_option, class: 'form-control' %>
  </p>

  <p>
    <%= form.submit class: 'btn btn-outline-primary' %>
  </p>
<% end %>
