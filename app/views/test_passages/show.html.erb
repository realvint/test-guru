<div class="card">
  <div class="card-header">
    <h1><%= t('.header') %>: <%= @test_passage.test.title %></h1>
  </div>
  <div class="card-body">
    <p>
      <%= t('.question') %> <%= @test_passage.current_question.id %> / <%= @test_passage.test.questions.count %>
    </p>

    <b><%= @test_passage.current_question.title %></b>

    <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
      <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :title, include_hidden: false do |b| %>
        <p>
          <%= b.check_box id: "answer_ids_#{b.object.id}" %>
          <%= b.label %>
        </p>
      <% end %>
      <p>
        <%= link_to 'Gist Question', gist_test_passage_path(@test_passage), method: :post %>
      </p>
      <p>
        <%= form.submit t('.next'), class:'btn btn-sm btn-outline-secondary' %>
      </p>
    <% end %>
  </div>
</div>